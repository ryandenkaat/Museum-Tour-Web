@model IEnumerable<Forge.Museum.Interfaces.DataTransferObjects.Artefact.ArtefactInfoDto>
<link href="~/Content/reset.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Index.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Artefact Content</h2>

<p>
    @Html.ActionLink("Add New Content for Artefact", "Create", new { artefactId = ViewBag.ArtefactID })
</p>
<table class="table">
    <tr>

        <th>
            ID#
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artefact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtefactInfoType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink(item.Artefact.Id.ToString() + ": " + item.Artefact.Name, "Details", "Artefacts", new { id = item.Artefact.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtefactInfoType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
