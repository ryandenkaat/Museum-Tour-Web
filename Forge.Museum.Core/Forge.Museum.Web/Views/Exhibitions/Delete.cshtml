@model Forge.Museum.Interfaces.DataTransferObjects.Exhibition.ExhibitionDto
<link href="~/Content/reset.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Index.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Exhibition?</h3>
<div>
    <h4>Exhibition #@Model.Id - @Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.LabelFor(model => model.Image, "Main Image:")</dt>
        @if (Model.Image == null || Model.Image.Length == 0)
        {
            <dd> No Image uploaded for this Exhibiton yet </dd>
        } else {
            <dd>
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.Image)" width="160" height="160" />
            </dd>
        }

        <dt>@Html.LabelFor(model => model.Id, "Exhibition ID#:")</dt>
        <dd>@Html.DisplayFor(model => model.Id)</dd>

        <dt>@Html.LabelFor(model => model.Name, "Name:")</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.LabelFor(model => model.Description, "Description:")</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>

        <dt>@Html.LabelFor(model => model.StartDate, "Start Date:")</dt>
        <dd>@Html.DisplayFor(model => model.StartDate)</dd>

        <dt>@Html.LabelFor(model => model.FinishDate, "Finish Date:")</dt>
        <dd>@Html.DisplayFor(model => model.FinishDate)</dd>

        <dt>@Html.LabelFor(model => model.Price_Adult, "Adult Price ($):")</dt>
        <dd>@Html.DisplayFor(model => model.Price_Adult)</dd>

        <dt>@Html.LabelFor(model => model.Price_Concession, "Concession Price ($):")</dt>
        <dd>@Html.DisplayFor(model => model.Price_Concession)</dd>

        <dt>@Html.LabelFor(model => model.Price_Child, "Child Price ($):")</dt>
        <dd>@Html.DisplayFor(model => model.Price_Child)</dd>
    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>

    }
</div>
