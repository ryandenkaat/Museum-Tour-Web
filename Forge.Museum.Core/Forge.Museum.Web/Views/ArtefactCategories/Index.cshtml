@model IEnumerable<Forge.Museum.Interfaces.DataTransferObjects.Artefact.ArtefactCategoryDto>

@{
    ViewBag.Title = "Index";
}

<h2>Artefact Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID#
        </th>
        <th>
            Category
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <!-- Edit Button */ !-->
            <a href="@Url.Action("Edit", "ArtefactCategories",  new { id = item.Id })" class="btn btn-link">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            </a>|
            <!-- Details Button */ !-->
            <a href="@Url.Action("Details", "ArtefactCategories",  new { id = item.Id })" class="btn btn-link">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            </a>|
            <!-- Delete Button */ !-->
            <a href="@Url.Action("Delete", "ArtefactCategories",  new { id = item.Id })" class="btn btn-link">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}

</table>
