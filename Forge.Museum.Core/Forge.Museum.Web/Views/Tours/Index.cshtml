@model IEnumerable<Forge.Museum.Interfaces.DataTransferObjects.Tour.TourDto>
<link href="~/Content/reset.css" rel="stylesheet" type="text/css" />
<link href="~/Content/Index.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Tours</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID#
        </th>
        <th>
            Name
        <th>
            Age Group
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AgeGroup)
        </td>
        <td>
            <!-- Edit Button */ !-->
            <a href="@Url.Action("Edit", "Tours",  new { id = item.Id })" class="btn btn-link">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            </a>|
            <!-- Details Button */ !-->
            <a href="@Url.Action("Details", "Tours",  new { id = item.Id })" class="btn btn-link">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
            </a>|
            <!-- Delete Button */ !-->
            <a href="@Url.Action("Delete", "Tours",  new { id = item.Id })" class="btn btn-link">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Index", "ToursArtefacts",  new { tourId = item.Id })" class="btn btn-link">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
    }

</table>
